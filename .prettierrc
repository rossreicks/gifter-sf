{
    "trailingComma": "none",
    "tabWidth": 4,
    "plugins": [
      "prettier-plugin-apex",
      "@prettier/plugin-xml"
    ],
    "overrides": [
      {
        "files": "**/lwc/**/*.html",
        "options": {
          "parser": "lwc"
        }
      },
      {
        "files": "*.{cmp,page,component}",
        "options": {
          "parser": "html"
        }
      },
      {
        "files": " * . {trigger,cls}",
        "options": {
          "parser": "apex"
        }
      },
      {
        "files": " * .{apex}",
        "options": {
          "parser": "apex-anonymous"
        }
      }
    ]
  }
